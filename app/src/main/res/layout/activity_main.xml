<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.its.ardi.accelerometer.MainActivity">

        .

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

                <Button
                    android:text="Start"

                    android:layout_height="wrap_content"
                    android:layout_below="@+id/zText"
                    android:layout_toEndOf="@+id/xText"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="22dp"
                    android:id="@+id/startButton"
                    android:layout_width="match_parent"
                    android:onClick="saveOnClick" />

                <Button
            android:text="Stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/startButton"
            android:layout_toEndOf="@+id/startButton"
            android:layout_marginStart="22dp"
            android:id="@+id/stopButton"
            android:onClick="stopOnClick" />

                <Button
            android:text="Display Sensor On Device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/startButton"
            android:layout_toEndOf="@+id/startButton"
            android:layout_marginStart="22dp"
            android:id="@+id/display"/>

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/startButton"
            android:layout_alignStart="@+id/startButton"
            android:layout_marginStart="12dp"
            android:layout_marginTop="26dp"
            android:id="@+id/start" />

        <TextView
            android:text="alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stop"
            android:layout_toEndOf="@+id/zText"
            android:layout_marginTop="18dp"
            android:id="@+id/simpanDi" />

        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stop"
            android:layout_alignBaseline="@+id/start"
            android:layout_alignBottom="@+id/start"
            android:layout_alignStart="@+id/stopButton" />

        <TextView
            android:text="Light avaliable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/simpanDi"
            android:layout_alignStart="@+id/simpanDi"
            android:layout_marginTop="27dp"
            android:id="@+id/LIGHT_available" />

        <TextView
            android:text="Light reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:id="@+id/LIGHT_reading"
            android:layout_below="@+id/LIGHT_available"
            android:layout_alignStart="@+id/startButton" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

        <TextView
            android:text="Y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yText"
            android:layout_below="@+id/xText"
            android:layout_alignStart="@+id/xText"
            android:layout_marginTop="34dp" />

                <TextView
                    android:text="X"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/xText"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
            android:text="Z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:id="@+id/zText"
            android:layout_below="@+id/yText"
            android:layout_alignParentStart="true" />
        </LinearLayout>


</RelativeLayout>
